<Window x:Class="DesktopApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopApp"
        mc:Ignorable="d"
        Title="GitClient001" Height="450" Width="800">
    <Grid>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="88,30,0,0" TextWrapping="Wrap" Text="Working Directory" VerticalAlignment="Top" Width="314" Name="GitPath" RenderTransformOrigin="0.499,0.469" GotFocus="GitPath_GotFocus" />
        <Button Content="Submit" HorizontalAlignment="Left" Margin="425,29,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click" Name="SetDir"/>
        <TextBox HorizontalAlignment="Left" Height="268" Margin="425,89,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="295" Name="Output" Foreground="Yellow" Background="Black"/>
        <TextBox HorizontalAlignment="Left" Height="268" Margin="88,89,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="314" Name="Directory"/>
        <Button Content="Update" HorizontalAlignment="Left" Margin="88,362,0,0" VerticalAlignment="Top" Width="75" Click="Update_Click"/>
        <Button Content="Add All" HorizontalAlignment="Left" Margin="177,362,0,0" VerticalAlignment="Top" Width="75" Name="AddAll" Visibility="Hidden" Click="AddAll_Click"/>

    </Grid>
</Window>
